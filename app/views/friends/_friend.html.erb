<% if user_signed_in? %>
  <% if @home_page %>
    <tr>
      <td>
        <%= link_to friend.first_name + " " + friend.last_name, friend, method: :show %>
        </td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= friend.user_id %></td>
    </tr>
    <% else %>
      <div class="jumbotron">
        <h1 class="display-4"><%= friend.first_name %> <%= friend.last_name %></h1>
        <p class="lead">
          <strong>Email:</strong>
          <%= friend.email %>
        </p>
        <p class="lead">
          <strong>Phone:</strong>
          <%= friend.phone %>
        </p>
        <p class="lead">
          <strong>Twitter:</strong>
          <%= friend.twitter %>
        </p>
        <hr class="my-4">
        <div>
          <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
          <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
          <%= button_to "Delete this friend", @friend, method: :delete, class:"btn btn-danger" %>
        </div>
      </div>
    <% end %>
<% else %>
<h1>Not signed in</h1>
<% end %>